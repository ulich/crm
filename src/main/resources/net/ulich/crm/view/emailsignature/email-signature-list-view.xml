<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://emailSignatureListView.title"
      focusComponent="emailSignaturesDataGrid">
    <data>
        <collection id="emailSignaturesDc"
                    class="net.ulich.crm.entity.EmailSignature">
            <fetchPlan extends="_base"/>
            <loader id="emailSignaturesDl" readOnly="true">
                <query>
                    <![CDATA[select e from EmailSignature e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="emailSignaturesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="emailSignaturesDataGrid.create"/>
            <button id="editBtn" action="emailSignaturesDataGrid.edit"/>
            <button id="removeBtn" action="emailSignaturesDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="emailSignaturesDl"/>
        </hbox>
        <dataGrid id="emailSignaturesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="emailSignaturesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="content"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
