<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://campaignListView.title"
      focusComponent="campaignsDataGrid">
    <data>
        <collection id="campaignsDc"
                    class="net.ulich.crm.entity.Campaign">
            <fetchPlan extends="_base">
                <property name="scheduleItems" fetch="JOIN" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="campaignsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Campaign e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="campaignsDataGrid.create"/>
            <button id="editBtn" action="campaignsDataGrid.edit"/>
            <button id="removeBtn" action="campaignsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="campaignsDl"/>
        </hbox>
        <dataGrid id="campaignsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="campaignsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
