<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://scheduledEmailDetailView.title"
      focusComponent="form">
    <data>
        <instance id="scheduledEmailDc"
                  class="net.ulich.crm.entity.ScheduledEmail">
            <fetchPlan extends="_base">
                <property name="customAttachments" fetch="JOIN" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="customAttachmentsDc" property="customAttachments"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="scheduledEmailDc">
            <dateTimePicker id="plannedSendDateField" property="plannedSendDate"/>
        </formLayout>
        <h4 text="msg://net.ulich.crm.entity/ScheduledEmail.customAttachments"/>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button action="customAttachmentsDataGrid.create"/>
            <button action="customAttachmentsDataGrid.edit"/>
            <button action="customAttachmentsDataGrid.remove"/>
        </hbox>
        <dataGrid id="customAttachmentsDataGrid" dataContainer="customAttachmentsDc" width="100%" minHeight="20em">
            <actions>
                <action id="create" type="list_create">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="edit" type="list_edit">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns>
                <column property="file"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
